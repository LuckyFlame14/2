<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Password Protected Page</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            padding: 50px;
            background-color: black; /* Set the background to black */
            color: white; /* Set the text color to white */
        }
        #protected-content {
            display: none;
        }
        input {
            padding: 10px;
            margin: 10px;
            font-size: 16px;
        }
        button {
            padding: 10px 20px;
            font-size: 16px;
            background-color: white; /* Button background */
            color: black; /* Button text color */
            border: none;
            cursor: pointer;
        }
        button:hover {
            background-color: #ddd; /* Button hover effect */
        }
    </style>
    <script>
        function checkPassword() {
            var password = document.getElementById("password").value;
            var correctPassword = "Lena"; // Password set to "Lena"

            if (password === correctPassword) {
                document.getElementById("protected-content").style.display = "block";
                document.getElementById("password-form").style.display = "none";
                
                // Add success message
                var successMessage = document.createElement("p");
                successMessage.textContent = "Password accepted! You can view the content below.";
                document.body.appendChild(successMessage);
            } else {
                alert("Incorrect password. Please try again.");
            }
        }
    </script>
</head>
<body>
    <div id="password-form">
        <h2>Enter Password</h2>
        <!-- Input field for the password -->
        <input type="password" id="password" placeholder="Enter Password">
        <button onclick="checkPassword()">Submit</button>
    </div>

    <div id="protected-content">
        <h2>Protected Content</h2>
        <p>This is the content that is shown after the correct password is entered.</p>
        <p>Don't Scan It</p>
    </div>
</body>
